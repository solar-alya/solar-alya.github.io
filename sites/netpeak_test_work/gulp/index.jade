        mixin group-card(group)
            article.group-card
                div.group-card__img
                    img(src= group.image alt= group.title )
                h1.group-card__title= group.title
                h2.group-card__year= group.year
                ul.group-card__songs
                    each song in group.songs
                     li.group-card__song= song
                    
